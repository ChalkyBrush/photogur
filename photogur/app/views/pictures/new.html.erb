<div id = "add_picture">

<h2>Add a picture</h2>
<p><%= link_to "Back to Pictures", pictures_url %></p>


<%= form_for @picture do |f| %>
  <p>
    <%= f.label "artist" %><br>
    <%= f.text_field "artist" %>
  </p>
  <p>
    <%= f.label "title" %><br>
    <%= f.text_field "title" %>
  </p>
  <p>
    <%= f.label "url" %><br>
    <%= f.text_field "url" %>
  </p>
  <p>
    <%= f.label "category" %><br>
    <%= f.select :category, ['People', 'Places', 'Nature', 'Space', 'Architecture', 'Design', 'Illustration', 'Food', 'Sports', 'Miscellaneous'].sort %>
    </select>
  </p>
  <p>
    <%= f.submit "Save" %> 
  </p>
<% end %>
</div>