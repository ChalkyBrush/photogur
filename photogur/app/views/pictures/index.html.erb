<%
pics = Picture.order("created_at DESC")
@newest_pictures = pics.limit(24)
%>

<li class="pageinfo"></li>
<% @newest_pictures.each do |picture| %>
<div class="picturecard">
<br>
  <li class="title"><%= picture[:title] %></li>
  <li class ="author"><%= picture[:artist] %></li>
  <%= link_to image_tag(picture.url, :class => "index"), "/pictures/#{picture.id}"%>
  
 </div>
 
<% end %>
